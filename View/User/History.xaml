<Window x:Class="CMS.View.User.History"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:CMS"
        mc:Ignorable="d"
        Title="History"
        Width="774"
        Height="600"
        Background="#eee"
        FontFamily="Microsoft YaHei UI"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        MouseDown="Window_MouseDown">
    <Window.Resources>
        <local:BinaryImageConverter x:Key="ByteToImage" />
    </Window.Resources>
    <StackPanel>
        <StackPanel VerticalAlignment="Top"
                    Height="47"
                    Background="#FF00A7C3"
                    Orientation="Horizontal">
            <TextBlock TextAlignment="Center"
                       Margin="300 12 12 12"
                       FontFamily="Microsoft JhengHei UI"
                       Foreground="White"
                       Width="200"
                       VerticalAlignment="Center"
                       FontSize="15"><Run Text="LỊCH SỬ THANH TOÁN" /></TextBlock>
            <Button Width="40"
                    Height="40"
                    Foreground="White"
                    ToolTip="Đăng xuất"
                    Background="Transparent"
                    Padding="0"
                    Margin="220 0 0 0"
                    x:Name="btnExit"
                    Click="btnExit_Click"
                    BorderBrush="Transparent">
                <materialDesign:PackIcon Kind="Shutdown"
                                         Height="30"
                                         Width="30"
                                         Foreground="White" />
            </Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Width="774">
            <Grid />
        </StackPanel>
        <StackPanel Margin="10"
                    Background="White">
            <materialDesign:Card Height="534">
                <StackPanel>
                    <ListView x:Name="lstBill"
                              Margin="10 10 10 0"
                              Height="514">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID"
                                                Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding id_bill}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Nhân viên"
                                                Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding id_account}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Thời gian thanh toán"
                                                Width="200">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding time_out}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Số lượng"
                                                Width="90">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding number_product}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Tổng tiền"
                                                Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding total_money}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Tác vụ"
                                                Width="150">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Xem chi tiết" x:Name="btnDetal" Click="btnDetal_Click"></Button>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Grid Margin="10 0 10 0">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Left">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </materialDesign:Card>
        </StackPanel>
    </StackPanel>
</Window>
