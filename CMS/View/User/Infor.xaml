<Window x:Class="CMS.View.User.Infor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMS.View.Admin"
        mc:Ignorable="d"
        Width="360.706"
        Height="574"
        Background="#eee"
        FontFamily="Microsoft YaHei UI"
        ResizeMode="NoResize" WindowStyle="None" 
        WindowStartupLocation="CenterScreen" BorderBrush="Black">
    <StackPanel Background="#fff">
        <Grid VerticalAlignment="Top"
                    Height="47"
                    Background="#FF00A7C3">
            <TextBlock TextAlignment="Center"
                       Margin="12"
                       FontFamily="Microsoft JhengHei UI"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       FontSize="15"><Run Text="THÔNG TIN TÀI KHOẢN" /></TextBlock>
            <Button HorizontalAlignment="Right"
                    Foreground="White" ToolTip="Thoát"
                    BorderBrush="{x:Null}" Margin="0,8,0,7"
                    x:Name="btnThoat" Click="btnThoat_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/CMS;component/Assets/exit.png"/>
                </Button.Background>
            </Button>
        </Grid>
        <Border Margin="20 5" CornerRadius="5" Background="White">
            <StackPanel Margin="10 0">
                <TextBox Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="Mã ID"
                             FontSize="13"
                             x:Name="txtID"
                             IsReadOnly="True"
                             VerticalAlignment="Center"/>
                <TextBox Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="Tên tài khoản"
                             FontSize="13"
                             x:Name="txtNAC"
                             IsReadOnly="True"
                             VerticalAlignment="Center"/>
                <!--<TextBox Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="Giới tính"
                             FontSize="13"
                             x:Name="txtGD"
                             VerticalAlignment="Center"/>-->
                <GroupBox
                    Header="Giới tính"
                    Style="{DynamicResource MaterialDesignGroupBox}"
                    materialDesign:ColorZoneAssist.Mode="Light">
                    <StackPanel Orientation="Horizontal">
                        <RadioButton
                            Style="{StaticResource MaterialDesignRadioButton}"
                            IsChecked="True"
                            Margin="20 -10"
                            IsEnabled="True"
                            x:Name="rdNam">
                            Nam
                        </RadioButton>
                        <RadioButton
                            
                            Style="{StaticResource MaterialDesignRadioButton}"
                            IsChecked="False"
                            IsEnabled="True"
                            x:Name="rdNu">
                            Nữ
                        </RadioButton>
                    </StackPanel>
                </GroupBox>
                <TextBox Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="Ngày sinh"
                             FontSize="13"
                             x:Name="txtBD"
                             IsReadOnly="True"
                             VerticalAlignment="Center"/>
                <TextBox Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="Địa chỉ"
                             FontSize="13"
                             x:Name="txtAD"
                             IsReadOnly="True"
                             VerticalAlignment="Center"/>
                <TextBox Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="Số điện thoại"
                             FontSize="13"
                             x:Name="txtPNB"
                             IsReadOnly="True"
                             VerticalAlignment="Center"/>
                <TextBox Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="Chức vụ"
                             FontSize="13"
                             x:Name="txtLI"
                             IsReadOnly="True"
                             VerticalAlignment="Center"/>
                <!--<Button Background="RoyalBlue"
                                Height="30"
